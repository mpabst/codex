prefix : <#> .
prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
prefix fpc: <https://fingerpaint.systems/core/> .

<#> a fpc:Rule ;
  fpc:clause [
    fpc:head { [
      a :Appending ;
      :left rdf:nil ;
      :right ?right ;
      :both ?right
    ] }
  ] , [
    fpc:head { [
      a :Appending ;
      :left [ rdf:first ?lf ; rdf:rest ?lr ] ;
      :right ?right ;
      :both [ rdf:first ?lf ; rdf:rest ?br ]
    ] } ;
    fpc:body { [
      a :Appending ;
      :left ?lr ;
      :right ?right ;
      :both ?br
    ] }
  ] .

:head
  a rdf:List ;
  rdf:first 1 ;
  rdf:rest ( 2 ) .

:tail
  a rdf:List ;
  rdf:first 3 ;
  rdf:rest rdf:nil .

:query a fpc:Query ;
  fpc:body { [
    a :Appending ;
    :left :head ;
    :right :tail ;
    :both ?both ] } .
